# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C++ files
[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 4

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefiles always use tabs
[Makefile]
indent_style = tab
